<% if logged_in? %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<%= render "shared/user_info" %>
		</section>
		<section class="micropost_form">
			<%= render "shared/micropost_form" %>
		</section>
	</aside>
	<div class="col-md-8">
      <h3><%= t "micropost.micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
</div>
<% else %>
<div class="center jumbotron">
	<h1><%= t "static_page.wellcome" %></h1>

	<h2>
		<%= t "static_page.this_is" %>
		<a href="http://www.railstutorial.org/"><%= t "ruby_on_rails_tutorial" %></a>
		<%= t "static_page.sample_application" %>
	</h2>

	<%= link_to t("static_page.sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: t("static_page.rails_logo")),
"http://rubyonrails.org/images/rails.png" %>
<%end%>
