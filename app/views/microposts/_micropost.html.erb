<li id="micropost-<%= micropost.id %>">
	<%= link_to gravatar_for(micropost.user, size: Settings.gravatar_size), micropost.user %>
	<span class="user"><%= link_to micropost.user.name, micropost.user %></span>
	<span><%= link_to micropost.title, micropost %></span>
	<span class="content">
		<%= micropost.content %>
		<%= image_tag micropost.picture.url if micropost.picture? %>
	</span>
	<span class="timestamp">
		<%= t "micropost.posted" %><%= time_ago_in_words(micropost.created_at) %> <%= t "micropost.ago" %>
		<% if current_user?(micropost.user) %>
		<%= link_to t("micropost.delete"), micropost, method: :delete,
		data: {confirm: t("micropost.you_sure")} %>
		<% end %>
	</span>
</li>