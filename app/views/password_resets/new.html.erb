<% provide :title, t("static_page.forgot_password2") %>
<h1><%= t "static_page.forgot_password2" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit t("static_page.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
